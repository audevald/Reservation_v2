{% extends 'base.html.twig' %}

{% block title 'Réservations du midi' %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<div class="container mt-4">
		<h4 class="text-center pb-4">Service du Midi -
			{{ date('now') | date('d/m/Y') }}</h4>
		<ul class="list-group">
			{% for reservation in reservations %}
				{{ include('list_template_day.html.twig') }}
			{% endfor %}
		</ul>
		{% if reservations | length == 0 %}Aucunes réservations ce midi{% endif %}
		<div class="pagination d-flex justify-content-center mt-4">
			{{ knp_pagination_render(reservations) }}
		</div>
	</div>
{% endblock %}
