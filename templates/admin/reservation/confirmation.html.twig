{% extends 'base.html.twig' %}

{% block title 'Gérer les réservations' %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<div class="container mt-4">
		<div class="row">
			<div class="col">
				<h4 class="text-center">Réservations à confirmer</h4>
				<ul class="list-group">
					{% for reservation in reservations %}
						{{ include('list_template_gestion.html.twig') }}						
					{% endfor %}					
				</ul>
				{% if reservations | length == 0 %}Aucunes réservations à confirmer{% endif %}
				<div class="pagination d-flex justify-content-center mt-4">
					{{ knp_pagination_render(reservations) }}
				</div>
				
			</div>
		</div>
	</div>
{% endblock %}
