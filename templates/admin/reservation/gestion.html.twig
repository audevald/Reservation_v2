{% extends 'base.html.twig' %}

{% block title 'Gérer les réservations' %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<div class="container mt-4">
		<div class="row">
			<div class="col">
				<h4 class="text-center">Réservations confirmées</h4>
					<div class="container">
						{{ form_start(form) }}
							<div class="form-row ">
								<div class="col-4">
									{{ form_row(form.date) }}
								</div>
								<div class="col-4">
									{{ form_row(form.name) }}
								</div>
								<div class="col-2 d-flex align-items-center">
									{{ form_row(form.cancel) }}
								</div>
								<div class="col-2">
									<button class="btn btn-primary">Rechercher</button>
								</div>
							</div>
						{{ form_end(form) }}
					</div>
				<ul class="list-group">
					{% for reservation in reservations %}
						{{ include('list_template_gestion.html.twig') }}
					{% endfor %}
				</ul>
				<div class="pagination d-flex justify-content-center mt-4">
					{{ knp_pagination_render(reservations) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
