{% extends 'base.html.twig' %}

{% block title 'Gérer les réservations' %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<div class="container mt-4">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header text-center">
						<h4 class="text-center">A confirmer</h4>
					</div>
					<div class="card-body p-0">
						<ul class="list-group">
							{% for reservation in unconfirmed %}
								{{ include('list_template.html.twig') }}
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card">
					<div class="card-header">
						<h4 class="text-center">Réservations confirmées</h4>
					</div>
					<div class="card-body p-0">
						<ul class="list-group">
							{% for reservation in confirmed %}
								{{ include('list_template.html.twig') }}
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
