{% extends 'base.html.twig' %}

{% block title 'Gérer les réservations' %}

{% block body %}
	{{ include('navbar.html.twig') }}
	<div class="container mt-4">
		<div class="row">
			<div class="col">
				<h4 class="text-center">A confirmer</h4>
				<ul class="list-group">
					{% for reservation in unconfirmed %}
						{{ include('list_template_gestion.html.twig') }}
					{% endfor %}
				</ul>
				<div class="pagination d-flex justify-content-center mt-4">
					{{ knp_pagination_render(unconfirmed) }}
				</div>
			</div>
			<div class="col ">
				<h4 class="text-center">Réservations confirmées</h4>
				<ul class="list-group">
					{% for reservation in confirmed %}
						{{ include('list_template_gestion.html.twig') }}
					{% endfor %}
				</ul>
				<div class="pagination d-flex justify-content-center mt-4">
					{{ knp_pagination_render(confirmed) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
