{% extends 'base.html.twig' %}

{% block title 'Ajouter une réservation' %}

{% block body %}
	<div class="container mt-4">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-4 form-client text-muted">
                    <h4 class="text-center mb-4">Vous souhaitez passer une réservation ...</h4>
                    {{ form_start(form) }}
                            {{ form_row(form.date) }}
                           {{ form_row(form.time) }}
                            {{ form_row(form.nb_client) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.phone) }}
                            {{ form_row(form.email) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Réserver !</button>
                        </div>                        
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
   
        
            
        


{% endblock %}