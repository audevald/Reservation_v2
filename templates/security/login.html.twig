{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
	<div class="container d-flex align-items-center justify-content-center" style="height: 80vh">
		<div class="jumbotron shadow text-center" style="width:50%">
				<h3 class="text-muted mb-4">Connection au tableau de bord</h3 class="mb-4">
				{% if error %}
					<div class="alert alert-danger">
						{{ error.messageKey | trans(error.messagedata, 'security') }}
					</div>
				{% endif %}
				<form action="{{ path('login') }}" method="post">
					<div class="from-group">
						<input type="text" name="_username" class="form-control mb-3" placeholder="Nom d'utilisateur" value="{{ last_username }}">
					</div>
					<div class="form-group">
						<input type="password"  name="_password" class="form-control" placeholder="Mot de passe">
					</div>

					<button type="submit" class="btn btn-primary">Se connecter</button>
				</form>
			

		</div>

	</div>

{% endblock %}
